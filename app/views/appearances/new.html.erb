<h1> Schedule New Appearance </h1>
<ul><% flash[:error].each do |error| %>
    <li><%= error %></li>
    <% end %><br/></ul>
<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %><br/>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %><br/>
    <%= f.label :rating %> 1 through 5
    <%= f.number_field :rating %>
    <%= f.submit %>

    <% end %>