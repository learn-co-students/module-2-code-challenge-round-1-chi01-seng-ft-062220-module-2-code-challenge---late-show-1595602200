<h1> Create a new guest appearance </h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
    <p> <%= error %> </p>
    <% end %>
<% end %>


<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>

    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit %>
<% end %>
