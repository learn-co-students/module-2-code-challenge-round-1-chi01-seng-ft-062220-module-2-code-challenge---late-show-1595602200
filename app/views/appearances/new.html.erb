
<% if @appearance.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@appearance.errors.count, "error") %>
      prohibited this appearance from being saved:
    </h2>
 
    <ul>
    <% @appearance.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div id="container">
  <%= form_for @appearance  do |f| %>
  
    <div class="form_div"><%= f.collection_select :guest_id, Guest.all, :id, :name %></div>
    <br />
    <div class="form_div"><%= f.collection_select :episode_id, Episode.all, :id, :date %></div>
    <br />
    <div class="form_div"><%= f.label :rating %></div>
    <div class="form_div"><%= f.number_field :rating %></div>
    <br>

    <div class="form_div"><%= f.submit %></div>
  <% end %>
</div>